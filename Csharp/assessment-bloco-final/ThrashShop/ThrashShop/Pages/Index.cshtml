@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}


<div class="container">
    <div class="row justify-content-md-center">
        
        @* Welcome message  *@
        <div class="text-center col-md-12">
            <h1 class="display-4">Seja Bem-vindo!</h1>
            <p>É um prazer receber você aqui na ThrashShop, a melhor loja de skate do Brasil!</p>
        </div>

        @* Card content *@
        @foreach (var item in Model.ListaDeSkates)
        {
            <div class="col-6 col-sm-4 col-md-3 col-lg-3 mb-3">
                <div class="card d-flex flex-column">
                    <img src="@item.ImagemUri" class="card-img-top img-fluid" style="border-radius: 25px; height: 320px; object-fit: fill;"/>

                    <div class="card-body">
                        <h5 class="card-title">@item.Nome</h5>
                        <p class="card-text">Valor: @item.Preco.ToString("C")</p>
                        <div class="mt-auto">
                            <a class="btn" style="background-color: #BD76FE"
                               asp-page="/Details"
                               asp-route-id="@item.SkateId"
                               asp-route-slug="@item.NomeSlug">Ver mais</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

